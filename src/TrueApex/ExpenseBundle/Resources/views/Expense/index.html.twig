{% extends 'ExpenseBundle::layout.html.twig' %}

{% block content %}
    <h1>Expenses list</h1>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Note</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expense in expenses %}
            <tr>
                <td><a href="{{ path('expense_show', { 'id': expense.id }) }}">{{ expense.id }}</a></td>
                <td>{{ expense.category }}</td>
                <td>{% if expense.date %}{{ expense.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ expense.amount }}</td>
                <td>{{ expense.note }}</td>
                <td>{% if expense.created %}{{ expense.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('expense_show', { 'id': expense.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('expense_edit', { 'id': expense.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('expense_new') }}">Create a new expense</a>
        </li>
    </ul>
{% endblock %}
